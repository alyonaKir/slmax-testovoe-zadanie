<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!--Grid collection-->
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="mageplaza_shippingrules_rule_listing_data_source" xsi:type="string">Mageplaza\ShippingRules\Model\ResourceModel\Rule\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Quote\Model\Quote\Address">
        <plugin name="shippingrules-quote-address" type="Mageplaza\ShippingRules\Plugin\Model\Quote\Address" sortOrder="10"/>
    </type>
    <type name="Magento\Quote\Model\ShippingMethodManagement">
        <plugin name="shippingrules-shippingmethod-cart" type="Mageplaza\ShippingRules\Plugin\Model\ShippingMethodManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Checkout\Model\TotalsInformationManagement">
        <plugin name="shippingrules-shippingmethod-cart-total" type="Mageplaza\ShippingRules\Plugin\Model\TotalsInformationManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Checkout\Model\ShippingInformationManagement">
        <plugin name="shippingrules-shippingmethod-payment" type="Mageplaza\ShippingRules\Plugin\Model\ShippingInformationManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Checkout\Model\PaymentInformationManagement">
        <plugin name="shippingrules-shippingmethod-placeorder" type="Mageplaza\ShippingRules\Plugin\Model\PaymentInformationManagement" sortOrder="10"/>
    </type>
    <type name="Magento\Checkout\Model\GuestPaymentInformationManagement">
        <plugin name="shippingrules-shippingmethod-guest-placeorder" type="Mageplaza\ShippingRules\Plugin\Model\GuestPaymentInformationManagement" sortOrder="10"/>
    </type>
    <type name="Mageplaza\Osc\Model\CheckoutManagement">
        <plugin name="osc-shippingrules-checkoutmanagement" type="Mageplaza\ShippingRules\Plugin\Model\CheckoutManagement" sortOrder="10"/>
    </type>
</config>
