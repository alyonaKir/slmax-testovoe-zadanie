<?php if ($ruleToken =  $block->getRequest()->getParam('arp_rule_token')) : ?>
    <input type="hidden" name="arp_rule_token" value="<?= /* @noEscape  */ $ruleToken ?>"/>
    <script type="text/javascript">
        require([
            'jquery'
        ], function ($) {
            $(document).ready(function() {
                var url      = window.location.href,
                    urlFormat = url.split('?arp_rule_token')[0];

                history.pushState({}, '', urlFormat);
                return false;
            });
        });
    </script>
<?php endif; ?>
